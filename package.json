{
  "name": "auditime",
  "homepage": "https://auditime.one",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "chart.js": "^3.2.0",
    "firebase": "^8.4.1",
    "react": "^17.0.2",
    "react-chartjs-2": "^3.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-spinners": "^0.11.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "!<rootDir>/src/App.js",
      "!<rootDir>/src/firebase.js",
      "!<rootDir>/src/index.js",
      "!<rootDir>/src/components/Auth/PrivateRoute.js",
      "!<rootDir>/src/utils/dataFormatter.js",
      "!<rootDir>/src/utils/firebaseHelper.js",
      "!<rootDir>/src/pages/index.js",
      "!<rootDir>/src/hooks/*.js",
      "!<rootDir>/src/context/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.1",
    "cypress": "^8.3.1"
  }
}
